    // Ha van utemezendo
    if(mki!=-1){
      allapot[mki]=2;
      utemezes[mki]=t;
    }
  }
  
  for(i=0;i&lt;5;i++)
    osszkoltseg += (hatarido[i]-utemezes[i])*koltseg[i];

return osszkoltseg;

}



